function chatOpen() {
  document.getElementById("chat-open").style.display = "none";
  document.getElementById("chat-close").style.display = "block";
  document.getElementById("chat-window2").style.display = "block";
}
function chatClose() {
  document.getElementById("chat-open").style.display = "block";
  document.getElementById("chat-close").style.display = "none";
  document.getElementById("chat-window2").style.display = "none";
}
function openConversation() {
  document.getElementById("chat-window2").style.display = "block";
}


function sendMessage() {
    let userText = document.getElementById("textInput");
    if (userText) {
        var chatMessage = {
            sender: "username",
            content: userText.value,
            type: 'CHAT'
        };

        document.getElementById("messageBox").innerHTML += `<div class="first-chat">
        <p>${userText.value}</p>
        <div class="arrow"></div>
        </div>`;

  
        fetch('http://localhost:5000/chat/internet-chat', {
          method: 'POST',
          body: chatMessage.content,
        })
        .then(response => response.text())
        .then(data => {
              onMessageReceived(data);
              document.getElementById("textInput").value = "";
              var objDiv = document.getElementById("messageBox");
              objDiv.scrollTop = objDiv.scrollHeight;
              return data;
            }).catch((error) => {
              console.log(error);
            });
    }
}

function onMessageReceived(payload) {
  console.log(payload);
    document.getElementById("messageBox").innerHTML += `<div class="second-chat">
              <div class="circle" id="circle-mar"></div>
              <p>${payload}</p>
              <div class="arrow"></div>
            </div>`;

    var objDiv = document.getElementById("messageBox");
    objDiv.scrollTop = objDiv.scrollHeight;
}


//press enter on keyboard and send message
addEventListener("keypress", (e) => {
  if (e.keyCode === 13) {

    const e = document.getElementById("textInput");
    if (e === document.activeElement) {
      sendMessage();
    }
  }
});